<div class="panel panel-default">
  <div class="panel-heading">
   メッセージ一覧
  </div>
  <div class="panel-body">
        <% @messages.each do |message| %>
      
        
          <span class="label label-info col-sm-1">名前</span>
          <div class="col-sm-2"><%= message.name %></div>
          <span class="label label-info col-sm-1">年齢</span>
          <div class="col-sm-1"><%= message.age %></div>
          <span class="label label-info col-sm-1">内容</span>
          <div class="col-sm-4"><%= message.body %></div>
          <div class="col-sm-2">
          (<%= link_to "edit" , edit_message_path(message) %>
           <%= link_to "destroy" , message , method: :delete, data: { confirm: '削除してもよろしいですか？' } %>
          )</div>


    <% end %>
    
  </div>
</div>

<%= render 'form' %>